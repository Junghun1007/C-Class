---------------------------------- 출력

#include <stdio.h>	// 전처리기 : 프로그램이 실행될 때 가장 먼저 실행되는 부분 
					          // stdio.h : 기본 입출력을 가능하게 만들어주는 헤더 파일

//	주석 : 코드에 대한 코멘트를 작성할 때 사용
//	프로그램을 실행하는데 영향을 끼치지 않는 부분
//	기본적으로 //를 사용해서 주석을 작성

/*
  여러 줄을 한번에 주석처리하고 싶을때는 /*사용

	C언어의 특성
	1. 작성되는 코드는 ;으로 끝나야 한다
	2. 대소문자를 구분한다
	3. 자유 형식(free-format)을 허용한다 (파이썬X)
	4. 절차지향적 언어이다

*/

int main() {	// 주된 코드가 담겨진 부분

	printf("Hello worldddddd");	// "(큰 따옴표)안에 작성된 문자열을 출력해주는 함수
							// ;(세미 콜론)은 코드의 마침을 나타내주는 기호
	
	return 0;	// 값을 반환해주는 코드
}

----------------------------------- 제어문자

#include <stdio.h>
/*
	제어문자 : 출력 결과를 제어해주는 문자
	\n : NewLine, 커서를 다음줄로 옮김
	\t : Tab, 탭 만큼 공간을 띄움
	\r : Carriage return, 커서를 문자열의 처음으로 옮김 (insert, 콘솔환경)
	\b : Back space, 커서 바로 이전의 문자 한 개를 지워줌
	\a : Alert, 경고음을 한 번 발생
*/

int main() {	
	
	printf("Hello \nworld\n"); 
	printf("Hello \tworld\n");
	printf("Hello \rworld\n");
	printf("Hello \bworld\n");
	
	/*
	Hello 
	world
	Hello	world
	world
	Helloworld
	*/

	return 0;	
}

---------------------------------------- quiz (1)

#include <stdio.h>

int main() {	

	printf("웃음: (*^ㅇ^*)\n");
	printf("사랑: (♥.♥)\n");
	printf("슬픔: (ㅠ.ㅠ)\n");
	printf("화남: (-_-^)\n");
	printf("-------------------------------\n");
	printf("이름 : 홍길동\n");
	printf("나이: 30\n");
	printf("주소: 서울 특별시 종로구 묘동 단성사\n");
	printf("키: 183.2\t 몸무게 : 70.53kg");
	return 0;
  
}

---------------------------------------- 서식 지정자
/*

	서식 지정자

	%c : character, 하나의 문자
	%s : string, 문자열
	%d : decimal, 10진수 정수
	%f : float, 실수
	%o : octal, 8진수 정수
	%x : hexadecimal, 16진수 정수
	%p : pointer, 주소
	%u : 부호가 없는 10진수 정수
	%% : 퍼센트 기호 출력

	C언어 데이터 표기법
	
	문자 : '(작은 따옴표)로 감싸준다
	문자열 : "(큰 따옴표)로 감싸준다
	정수 : 숫자 그대로 작성한다
	실수 : 숫자 뒤에 소수점까지 작성해준다
	
*/

#include <stdio.h>

int main() {	
	
	printf("%d\n", 81);
	printf("%c\n", 'A');
	printf("%s\n", "String");
	printf("%f\n", 123.456);
  
  printf("%d %d\n", 'A', 'F');
	printf("%c %c\n", 65, 97);
	
	return 0;	
}

























